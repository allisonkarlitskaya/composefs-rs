FROM fedora:41
COPY extra /
RUN --mount=type=cache,target=/var/cache/libdnf5 <<EOF
    set -eux

    dnf --setopt keepcache=1 install --allowerasing -y \
        composefs \
        dosfstools \
        kernel \
        openssh-server \
        skopeo \
        strace \
        util-linux \
        systemd

    systemctl enable systemd-networkd
    passwd -d root
    mkdir /sysroot
EOF
COPY cfsctl /usr/bin
